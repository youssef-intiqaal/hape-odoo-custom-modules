<odoo>
    <!-- Export Wizard View -->
    <record id="view_invoice_export_wizard" model="ir.ui.view">
        <field name="name">invoice.export.wizard.form</field>
        <field name="model">invoice.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Invoice Data">
                <group>
                    <div>
                        <label for="date_from"/>
                        <field name="date_from" class="oe_inline"/>
                        <label for="date_to"/>
                        <field name="date_to" class="oe_inline"/>
                        <button name="action_load_invoices"
                                type="object"
                                string="Load Invoices"
                                icon="fa-refresh"
                                class="oe_inline btn-secondary"/>
                        <button name="load_all_invoices"
                                type="object"
                                string="Load All Invoices"
                                icon="fa-database"
                                class="btn-secondary"/>
                        <button name="clear_invoices"
                                type="object"
                                string="Clear"
                                icon="fa-trash"
                                class="btn-secondary"/>
                    </div>
                </group>
                <group>
                    <field name="invoice_ids"/>
                </group>
                <footer>
                    <button name="export_belastungen" type="object" string="Export Belastungen" class="btn-primary"/>
                    <button name="export_kunden" type="object" string="Export Kunden" class="btn-primary"/>
                    <button string="Cancel" class="btn-link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
