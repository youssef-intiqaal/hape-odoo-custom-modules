<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_update_apotheke_qty_wizard" model="ir.ui.view">
        <field name="name">update.apotheke.qty.wizard.form</field>
        <field name="model">update.apotheke.qty.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Apotheke Quantity &amp; Price">
                <group>
                    <field name="shop_id"/>
                    <field name="offer_id" force_save="1"/>
                    <field name="product_id" readonly="1"/>
                    <field name="product_ean" readonly="1"/>
                    <field name="product_qty_available" readonly="1"/>
                    <field name="product_sales_price" readonly="1" widget="monetary"
                           options="{'currency_field': 'company_currency_id'}"/>
                    <field name="company_currency_id" invisible="1"/>
                </group>
                <footer>
                    <button name="action_submit_update" string="Update Quantity &amp; Price" type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>