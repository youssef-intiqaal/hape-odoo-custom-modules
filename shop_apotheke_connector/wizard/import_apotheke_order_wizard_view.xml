<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_import_apotheke_order_wizard_form" model="ir.ui.view">
        <field name="name">import.apotheke.order.wizard.form</field>
        <field name="model">import.apotheke.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Apotheke Orders">
                <group>
                    <field name="setting_id" required="1"/>
                    <field name="shop_id" domain="[('setting_id', '=', setting_id)]" required="1"/>
                    <field name="channel_id" domain="[('shop_id', '=', shop_id)]" required="1"/>
                </group>
                <footer>
                    <button name="action_import_orders" string="Import Orders" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_import_apotheke_order_wizard" model="ir.actions.act_window">
        <field name="name">Import Apotheke Orders</field>
        <field name="res_model">import.apotheke.order.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <!-- Action to open sale orders with from Apotheke -->
     <record id="action_apotheke_sale_orders" model="ir.actions.act_window">
        <field name="name">Apotheke Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('from_apotheke', '=', True)]</field>
        <field name="context">{}</field>
    </record>

</odoo>
