<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_offer_wizard_form" model="ir.ui.view">
        <field name="name">import.offer.wizard.form</field>
        <field name="model">import.offer.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Offers">
                <group>
                    <field name="setting_id"/>
                    <field name="shop_id"/>
                </group>
                <footer>
                    <button string="Import Offers" type="object" name="action_import_offers" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_offer_wizard" model="ir.actions.act_window">
        <field name="name">Import Offers</field>
        <field name="res_model">import.offer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>