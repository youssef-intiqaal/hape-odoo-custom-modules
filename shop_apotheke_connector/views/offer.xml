<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_tree_apotheke_product_offer" model="ir.ui.view">
        <field name="name">apotheke.product.offer.tree</field>
        <field name="model">apotheke.product.offer</field>
        <field name="arch" type="xml">
            <list string="Product Offers">
                <field name="shop_id"/>
                <field name="shop_offer_id"/>
                <field name="offer_sku"/>
                <field name="product_id"/>
                <field name="product_sku"/>
                <field name="product_ean"/>
                <field name="price" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                <field name="company_currency_id" column_invisible="1"/>
                <field name="quantity"/>
                <field name="state_code"/>
                <field name="start_date" column_invisible="1"/>
                <field name="end_date" column_invisible="1"/>
                <field name="offer_active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_form_apotheke_product_offer" model="ir.ui.view">
        <field name="name">apotheke.product.offer.form</field>
        <field name="model">apotheke.product.offer</field>
        <field name="arch" type="xml">
            <form string="Product Offer">
                <sheet>
                    <group>
                        <group>
                            <field name="shop_id"/>
                            <field name="channel_ids" domain="[('shop_id', '=', shop_id)]" widget="many2many_tags"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="offer_sku"/>
                            <field name="shop_offer_id"/>
                            <field name="offer_active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="product_sku"/>
                            <field name="product_ean"/>
                        </group>
                        <group>
                            <field name="price" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                            <field name="quantity"/>
                            <field name="apotheke_tax_id"/>
                            <field name="company_currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="state_code"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_apotheke_product_offer" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">apotheke.product.offer</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'group_by': 'shop_id'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Shop Apotheke Offer
            </p>
        </field>
    </record>
</odoo>