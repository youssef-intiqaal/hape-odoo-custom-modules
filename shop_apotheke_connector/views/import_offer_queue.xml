<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Offer Queue Form View -->
    <record id="view_import_offer_queue_form" model="ir.ui.view">
        <field name="name">import.offer.queue.form</field>
        <field name="model">import.offer.queue</field>
        <field name="arch" type="xml">
            <form string="Import Offer Queue" create="0">
                <header>
                    <button name="action_update_apotheke_products"
                            string="Update Apotheke Products"
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_update_apotheke_products"
                            string="Retry Failed Lines"
                            type="object"
                            class="oe_highlight"
                            invisible="state in ['processed', 'draft']"/>
                    <button name="create_offers"
                            string="Create Offers"
                            type="object"
                            class="oe_highlight"
                            invisible="offers_created"
                    />
                    <button name="action_generate_products"
                            type="object"
                            string="Generate Products"
                            class="btn-secondary"
                            invisible="not has_missing_products"/>

                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Processed" bg_color="text-bg-success"
                            invisible="state != 'processed'"/>
                    <group>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" required="True"/>
                            </h1>
                        </div>
                        <field name="setting_id" readonly="1"/>
                        <field name="create_date" widget="date"/>
                    </group>
                    <notebook>
                        <page string="Offer Lines">
                            <field name="line_ids" readonly="state == 'processed'">
                                <list editable="bottom" decoration-info="state == 'draft'"
                                      decoration-success="state == 'processed'" decoration-danger="state == 'failed'"
                                      create="0" edit="1" delete="0">
                                    <field name="shop_id"/>
                                    <field name="channel_ids" widget="many2many_tags"/>
                                    <field name="offer_sku"/>
                                    <field name="offer_active" widget="boolean_toggle"/>
                                    <field name="shop_offer_id"/>
                                    <field name="product_id"/>
                                    <field name="product_sku"/>
                                    <field name="product_ean"/>
                                    <field name="company_currency_id" column_invisible="1"/>
                                    <field name="price" widget="monetary"
                                           options="{'currency_field': 'company_currency_id'}"/>
                                    <field name="quantity"/>
                                    <field name="state_code"/>
                                    <field name="start_date" column_invisible="1"/>
                                    <field name="end_date" column_invisible="1"/>
                                    <field name="state" widget="badge" decoration-info="state == 'draft'"
                                           decoration-success="state == 'processed'"
                                           decoration-danger="state == 'failed'"/>
                                </list>
                            </field>
                        </page>
                        <page string="Logs">
                            <field name="log_ids">
                                <list decoration-info="status == 'info'"
                                      decoration-success="status == 'success'"
                                      decoration-danger="status == 'error'" create="0" edit="0" delete="0"
                                      default_order="status asc, create_date desc">
                                    <field name="timestamp" readonly="1"/>
                                    <field name="message" readonly="1"/>
                                    <field name="status" widget="badge" decoration-info="status == 'info'"
                                           decoration-success="status == 'success'"
                                           decoration-danger="status == 'error'" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Offer Queue Tree View -->
    <record id="view_import_offer_queue_tree" model="ir.ui.view">
        <field name="name">import.offer.queue.tree</field>
        <field name="model">import.offer.queue</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'draft'" decoration-warning="state == 'partially_processed'"
                  decoration-success="state == 'processed'" decoration-danger="state == 'failed'" create="0">
                <field name="name"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'"
                       decoration-warning="state == 'partially_processed'"
                       decoration-success="state == 'processed'"
                       decoration-danger="state == 'failed'"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>
    <!-- Offer Queue Action -->
    <record id="action_import_offer_queue" model="ir.actions.act_window">
        <field name="name">Offer Queues</field>
        <field name="res_model">import.offer.queue</field>
        <field name="view_mode">list,form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_neutral_face">
                There are no offer queues yet.
            </p>
        </field>
    </record>
</odoo>
