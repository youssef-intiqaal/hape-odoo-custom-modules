<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="sale_order_view_form_inherit_connector" model="ir.ui.view">
            <field name="name">sale.order.view.form.inherit.connector</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='order_line']//list//field[@name='price_unit']" position="after">
                    <field name="commission" widget="monetary" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//list//field[@name='product_template_id']" position="before">
                    <field name="apotheke_line_id" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//list//field[@name='price_subtotal']" position="after">
                    <field name="apotheke_state" widget="badge" optional="show" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="apotheke_order_id" invisible="not from_apotheke"/>
                    <field name="apotheke_offer_id" invisible="not from_apotheke"/>
                    <field name="shop_id" invisible="not from_apotheke"/>
                    <field name="channel_id" invisible="not from_apotheke"/>
                    <field name="from_apotheke" invisible="1"/>
                    <field name="accepted_on_apotheke" invisible="1"/>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="accept_on_apotheke"
                            type="object"
                            string="Accept on Apotheke"
                            class="oe_highlight"
                            invisible="not from_apotheke or accepted_on_apotheke"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
