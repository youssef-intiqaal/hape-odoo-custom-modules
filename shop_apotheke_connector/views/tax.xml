<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tax List View -->
    <record id="view_apotheke_tax_tree" model="ir.ui.view">
        <field name="name">apotheke.tax.tree</field>
        <field name="model">apotheke.tax</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="value"/>
                <field name="tax_id"/>
            </list>
        </field>
    </record>
    <!-- Tax Form View -->
    <record id="view_apotheke_tax_form" model="ir.ui.view">
        <field name="name">apotheke.tax.form</field>
        <field name="model">apotheke.tax</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="code"/>
                    <field name="value"/>
                    <field name="tax_id"/>
                </group>
            </form>
        </field>
    </record>
    <!-- Tax Action -->
    <record id="action_apotheke_tax" model="ir.actions.act_window">
        <field name="name">Apotheke Taxes</field>
        <field name="res_model">apotheke.tax</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define tax mappings for Shop Apotheke.
            </p>
        </field>
    </record>
</odoo>
