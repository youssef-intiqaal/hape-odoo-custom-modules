<?xml version="1.0"?>
<odoo>
    <!-- Setting Tree View -->
    <record id="view_shop_apotheke_connector_setting_tree" model="ir.ui.view">
        <field name="name">shop.apotheke.connector.setting.tree</field>
        <field name="model">shop.apotheke.connector.setting</field>
        <field name="arch" type="xml">
            <list string="Connector Settings">
                <field name="display_name"/>
                <field name="server"/>
                <field name="api_key"/>
                <field name="shop_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Setting Form View -->
    <record id="view_shop_apotheke_connector_setting_form" model="ir.ui.view">
        <field name="name">shop.apotheke.connector.setting.form</field>
        <field name="model">shop.apotheke.connector.setting</field>
        <field name="arch" type="xml">
            <form string="Connector Setting">
                <group>
                    <group string="Connection Settings">
                        <field name="server" placeholder="https://your-instance.mirakl.net"/>
                        <field name="api_key"/>
                    </group>
                    <group string="Import Settings">
                        <field name="create_product_if_not_found" widget="boolean_toggle"/>
                    </group>
                </group>
                <group string="Shops">
                    <field name="shop_ids" nolabel="1">
                        <list>
                            <field name="shop_number"/>
                            <field name="name"/>
                            <field name="channel_ids" widget="many2many_tags"/>
                            <field name="delivery_method_ids" widget="many2many_tags"/>
                        </list>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <!-- Setting Action -->
    <record id="action_shop_apotheke_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">shop.apotheke.connector.setting</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
